{% extends 'base.html.twig' %}

{% block title %}Liste des Personnes{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des Personnes</h1>
        
        <a href="{{ path('app_person_new') }}" class="btn btn-primary mb-3">Ajouter une personne</a>
        
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Date de naissance</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for person in people %}
                    <tr>
                        <td>{{ person.id }}</td>
                        <td>{{ person.firstName }}</td>
                        <td>{{ person.lastName }}</td>
                        <td>{{ person.email }}</td>
                        <td>{{ person.birthDate|date('Y-m-d') }}</td>
                        <td>
                            <a href="{{ path('app_person_show', {'id': person.id}) }}" class="btn btn-info btn-sm">Voir</a>
                            <a href="{{ path('app_person_edit', {'id': person.id}) }}" class="btn btn-warning btn-sm">Éditer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
